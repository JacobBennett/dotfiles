#ALL my custom BASH functions

# copy rsa public key
function copykey() {
  cat ~/.ssh/id_rsa.pub | pbcopy
}


# copy my ip to the clipboard and display it in the terminal
function ip {
  YELLOW="\033[33m"
  IP=$(ifconfig | grep 'inet 1' | cut -c 6- | awk 'NR==2 {print $1}')
  echo -e ${YELLOW}$IP
  echo $IP | pbcopy
}

# show or hide hidden files in Finder window
function showhidden() {
  if [ "$1" = "YES" ]; then

    defaults write com.apple.finder AppleShowAllFiles -boolean TRUE
    killall Finder

  elif [ "$1" = "NO" ]; then

    defaults write com.apple.finder AppleShowAllFiles -boolean FALSE
    killall Finder

  else

    defaults write com.apple.finder AppleShowAllFiles -boolean TRUE
    killall Finder

  fi

}

# cd into whatever is the forefront Finder window.
cdf() {  # short for cdfinder
  cd "`osascript -e 'tell app "Finder" to POSIX path of (insertion location as alias)'`"
}

# search the history for a key term
function hg {
  history | grep --color=auto $1
}


#[php-artisan-start]
function pa() {
  php artisan "$@"
}

function pam() {
  php artisan migrate $1 --env=local
}

function pal() {
  php artisan "$@" --env=local
}
#[php-artisan-stop]


#[git-start]

function gnb() {
  git checkout -b $1
}


function gar() {
 git branch -u "$@"
}
#[git-end]

#[iTerm-start]
function tab() {
  COMMAND="$@"
  osascript -e "
  tell application \"iTerm\"
   tell the first terminal
    launch session \"Default Session\"
    tell the last session
     write text \"cd $(pwd)\"
     write text \"$COMMAND\"
    end tell
   end tell
  end tell"
}
#[iTerm-end]

function serve-new() {
  if [ "$1" == "-h" ]; then
    echo "Usage: serve-new domain.dev folder-to-map-to"
  fi 

  serve $1 /home/vagrant/Code/$2/public
}
