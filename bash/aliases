#ALL my custom BASH aliases
# find more cool ones at http://alias.sh/most-popular/usage

#[misc-start]
alias c='clear'
alias la='ls -a'
alias ..='cd ..'
alias ...='cd ../../'
alias ....='cd ../../../'
alias webd='cd Documents/web/'
alias running='ps -ax'
alias bashsource='source ~/.dotfiles/bash/aliases; source ~/.dotfiles/bash/functions'
alias emulate='open /Applications/Xcode.app/Contents/Developer/Platforms/iPhoneSimulator.platform/Developer/Applications/iPhone\ Simulator.app'
alias gsw="gulp styles; gulp watch"
alias vm='ssh vagrant@127.0.0.1 -p 2222'
#[misc-end]

#[git-start]
alias gs='git status -sb'
alias gaa='git add -A'
alias gdiff='git diff | subl'
alias gl='git log --pretty=oneline --abbrev-commit'
alias gll='git log --graph --pretty=format:'\''%C(yellow)%h%C(cyan)%d%Creset %s %C(white)- %an, %ar%Creset'\'''
alias glll='git log --stat --abbrev-commit'
alias gpom='git pull origin master'
alias gassume='update-index --assume-unchanged'
alias gdetail='gitk --all &'
#[git-end]

#[screenshot-start]
# use --name or --location after ss
# then call ssdone when finished with changes
alias ss='defaults write com.apple.screencapture'
alias ssshadow='defaults write com.apple.screencapture disable-shadow -bool false'
alias ssnoshadow='defaults write com.apple.screencapture disable-shadow -bool true'
alias ssdone='killall SystemUIServer'
#[screenshot-end]

#[laravel-start]
#https://github.com/JeffreyWay/Laravel-4-Generators
alias g:m="php artisan generate:model"
alias g:c="php artisan generate:controller"
alias g:v="php artisan generate:view"
alias g:s="php artisan generate:seed"
alias g:mig="php artisan generate:migration"
alias g:r="php artisan generate:resource"
alias facadehelper="wget https://gist.githubusercontent.com/barryvdh/5227822/raw/2251971d137c853b1ed073316f03b9c2037554b4/_ide_helper.php"
#[laravel-end]

#[iTerm-start]

##uses tab function
alias tpas="tab pa serve"
alias tgw="tab gulp watch"
alias startdev="tpas; tgw"
#[iTerm-end]
