#ALL my custom BASH aliases
# find more cool ones at http://alias.sh/most-popular/usage

#[misc-start]
alias c='clear'
alias la='ls -a'
alias ..='cd ..'
alias ...='cd ../../'
alias ....='cd ../../../'
alias webd='cd /Applications/MAMP/htdocs/'
alias bashsource='source ~/.dotfiles/bash/aliases; source ~/.dotfiles/bash/functions; source ~./dotfiles/bash/private_aliases'
alias emulate='open /Applications/Xcode.app/Contents/Developer/Platforms/iPhoneSimulator.platform/Developer/Applications/iPhone\ Simulator.app'
alias facetime='sudo killall VDCAssistant'
#[misc-end]

#[git-start]
alias gs='git status -s'
alias gaa='git add -A'
alias gdiff='git diff | subl'
alias gl='git log --pretty=oneline --abbrev-commit'
alias gll='git log --graph --pretty=format:'\''%C(yellow)%h%C(cyan)%d%Creset %s %C(white)- %an, %ar%Creset'\'''
alias glll='git log --stat --abbrev-commit'
alias gassume='update-index --assume-unchanged'
alias gdetail='gitk --all &'
#[git-end]

#[screenshot-start]
# use --name or --location after ss
# then call ssdone when finished with changes
alias ss='defaults write com.apple.screencapture'
alias ssshadow='defaults write com.apple.screencapture disable-shadow -bool false'
alias ssnoshadow='defaults write com.apple.screencapture disable-shadow -bool true'
alias ssdone='killall SystemUIServer'
#[screenshot-end]